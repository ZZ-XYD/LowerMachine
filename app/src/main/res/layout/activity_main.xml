                <!--android:textColor="@color/white"-->
                <!--android:background="@mipmap/qr_code"/>-->
        </com.xingyeda.lowermachine.view.layout.PercentLinearLayout>

    </com.xingyeda.lowermachine.view.layout.PercentLinearLayout>
</com.xingyeda.lowermachine.view.layout.PercentLinearLayout>

